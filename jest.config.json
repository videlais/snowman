{
    "projects": [
        {
            "displayName": "jest-puppeteer",
            "testMatch": ["<rootDir>/test/e2e/**/*.test.js"],
            "preset": "jest-puppeteer",
            "testTimeout": 30000,
            "setupFilesAfterEnv": ["<rootDir>/test/setupPuppeteer.js"],
            "transform": {
                "^.+\\.js$": "babel-jest"
            }
        },
        {
            "displayName": "jest-jsdom",
            "testMatch": ["<rootDir>/test/jsdom/*.test.js"],
            "testEnvironment": "jsdom",
            "transform": {
                "^.+\\.js$": "babel-jest"
            },
            "setupFiles": ["<rootDir>/test/setup.js"],
            "testTimeout": 30000
        }
    ],
    "verbose": true
}