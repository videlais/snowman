  },
  "devDependencies": {
    "@babel/cli": "^7.28.0",
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@eslint/js": "^9.30.1",
    "@eslint/json": "^0.12.0",
    "css-loader": "^7.1.2",
    "ejs": "^3.1.10",
    "eslint": "^9.30.1",
    "eslint-plugin-jest": "^29.0.1",
    "globals": "^16.3.0",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "shelljs": "^0.10.0",
