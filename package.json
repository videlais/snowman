{
  "name": "snowman",
  "version": "3.0.0",
  "description": "An advanced story format for authors more experienced with HTML, CSS, and JavaScript. See its <a href='https://videlais.github.io/snowman/#/' target='_blank' rel='noopener noreferrer'>documentation</a>.",
  "license": "MIT",
  "repository": "https://github.com/videlais/snowman/",
  "scripts": {
    "test": "jest test/jsdom/* --coverage",
    "test:e2e": "bash compile-e2e-tests.sh && playwright test && find test/e2e -name '*.html' -type f -delete",
    "test:e2e:extensions": "playwright test test/e2e/extensions",
    "lint": "eslint src/*.js test/*.js src/twine-extensions/*.js --fix",
    "build": "webpack",
    "package": "npm run build && node build-format.js",
    "all": "npm run lint && npm run test && npm run package"
  },
  "keywords": [
    "twine",
    "storyformat"
  ],
  "author": "Dan Cox",
  "dependencies": {
    "ejs": "^3.1.10",
    "jquery": "^3.7.1",
    "markdown-it": "^14.1.0",
    "normalize.css": "^8.0.1",
    "quis": "^1.3.7",
    "underscore": "^1.13.7"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@tabler/icons": "^3.36.0",
    "babel-jest": "^30.2.0",
    "codemirror": "^6.0.2",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.4",
    "eslint": "^9.39.2",
    "eslint-plugin-jest": "^29.12.0",
    "eslint-plugin-jsdoc": "^61.5.0",
    "extwee": "^2.3.13",
    "globals": "^17.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "mini-css-extract-plugin": "^2.9.4",
    "open": "^11.0.0",
    "open-cli": "^8.0.0",
    "shelljs": "^0.10.0",
    "style-loader": "^4.0.0",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  }
}
