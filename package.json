{
  "name": "snowman",
  "version": "3.0.0",
  "description": "An advanced story format for authors more experienced with HTML, CSS, and JavaScript. See its <a href='https://videlais.github.io/snowman/#/' target='_blank' rel='noopener noreferrer'>documentation</a>.",
  "license": "MIT",
  "repository": "https://github.com/videlais/snowman/",
  "scripts": {
    "test": "jest test/jsdom/* --coverage",
    "test:unit": "jest test/jsdom/* --coverage",
    "test:unit:watch": "jest test/jsdom/* --watch",
    "test:unit:fast": "jest test/jsdom/* --no-coverage",
    "test:e2e": "jest test/e2e --preset=jest-puppeteer",
    "test:e2e:extensions": "jest test/e2e/extensions --preset=jest-puppeteer",
    "test:all": "jest --coverage",
    "test:all:watch": "jest --watch",
    "lint": "eslint src/*.js test/*.js src/twine-extensions/*.js --fix",
    "lint:check": "eslint src/*.js test/*.js src/twine-extensions/*.js",
    "build": "webpack",
    "build:watch": "webpack --watch",
    "build:extensions": "webpack --config webpack.extensions.config.js",
    "build:extensions:watch": "webpack --config webpack.extensions.config.js --watch",
    "build:all": "npm run build && npm run build:extensions",
    "dev": "npm run build:watch",
    "dev:extensions": "webpack serve --config webpack.extensions.config.js --open",
    "package": "npm run build:all && node build-format.js",
    "validate": "npm run lint:check && npm run package && npm run test:unit:fast",
    "validate:full": "npm run lint && npm run package && npm run test:all",
    "ci": "npm run validate:full",
    "visual-test": "npm run package && extwee -s dist/format.js -i visual_testing/index.twee -c -o visual_testing/index.html && open-cli visual_testing/index.html",
    "quick": "npm run lint:check && npm run test:unit:fast",
    "all": "npm run lint && npm run test:unit && npm run package"
  },
  "keywords": [
    "twine",
    "storyformat"
  ],
  "author": "Dan Cox",
  "dependencies": {
    "ejs": "^3.1.10",
    "jquery": "^3.7.1",
    "markdown-it": "^14.1.0",
    "normalize.css": "^8.0.1",
    "quis": "^1.3.5",
    "underscore": "^1.13.7"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@eslint/js": "^9.37.0",
    "@tabler/icons": "^3.19.0",
    "babel-jest": "^30.2.0",
    "codemirror": "^5.65.18",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "eslint": "^9.37.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsdoc": "^61.1.4",
    "extwee": "^2.3.5",
    "globals": "^16.4.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-puppeteer": "^11.0.0",
    "mini-css-extract-plugin": "^2.9.4",
    "open": "^10.2.0",
    "open-cli": "^8.0.0",
    "puppeteer": "^24.25.0",
    "shelljs": "^0.10.0",
    "style-loader": "^4.0.0",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  }
}
