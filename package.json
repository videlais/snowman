{
  "name": "snowman",
  "version": "3.0.0",
  "description": "An advanced story format for authors more experienced with HTML, CSS, and JavaScript. See its <a href='https://videlais.github.io/snowman/#/' target='_blank' rel='noopener noreferrer'>documentation</a>.",
  "license": "MIT",
  "repository": "https://github.com/videlais/snowman/",
  "scripts": {
    "test": "jest test/jsdom/* --coverage",
    "test:e2e": "jest test/e2e --preset=jest-puppeteer",
    "test:unit": "jest test/jsdom/*",
    "test:all": "jest --coverage",
    "lint": "eslint src/*.js test/*.js --fix",
    "build": "webpack",
    "package": "npm run build && node build-format.js",
    "validate": "npm run lint && npm run package && npm run test",
    "ci": "npm run lint && npm run package && npm run test:all",
    "visual-test": "npm run package && extwee -s dist/format.js -i visual_testing/index.twee -c -o visual_testing/index.html && open-cli visual_testing/index.html",
    "all": "npm run validate"
  },
  "keywords": [
    "twine",
    "storyformat"
  ],
  "author": "Dan Cox",
  "dependencies": {
    "ejs": "^3.1.10",
    "jquery": "^3.7.1",
    "markdown-it": "^14.1.0",
    "normalize.css": "^8.0.1",
    "quis": "^1.3.5",
    "underscore": "^1.13.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "eslint": "^9.37.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsdoc": "^61.1.4",
    "extwee": "^2.3.5",
    "globals": "^16.4.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-puppeteer": "^11.0.0",
    "mini-css-extract-plugin": "^2.9.4",
    "open": "^10.2.0",
    "open-cli": "^8.0.0",
    "puppeteer": "^24.25.0",
    "shelljs": "^0.10.0",
    "style-loader": "^4.0.0",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  }
}
