{
  "name": "snowman",
  "version": "2.1.2",
  "description": "An advanced story format for authors more experienced with HTML, CSS, and JavaScript. See its <a href='https://videlais.github.io/snowman/2/' target='_blank' rel='noopener noreferrer'>documentation</a>.",
  "license": "MIT",
  "repository": "https://github.com/videlais/snowman/",
  "scripts": {
    "test": "jest --config jest.config.cjs",
    "test:html": "jest --config jest.config.extended.cjs",
    "test:playwright": "playwright test test/playwright/cookbook/**/*.test.js --reporter=list",
    "test:full": "npm run test && npm run test:html && npm run test:playwright",
    "lint": "eslint lib/*.js lib/**/*.js test/**/*.js scripts/**/*.js --fix",
    "build": "webpack --config webpack.config.cjs",
    "compile": "node scripts/build-format.js",
    "all": "npm run lint && npm run test && npm run build && npm run compile"
  },
  "keywords": [
    "twine",
    "storyformat"
  ],
  "author": "Dan Cox",
  "dependencies": {
    "jquery": "^3.7.1",
    "jsdom": "^27.2.0",
    "lz-string": "^1.5.0",
    "markdown-it": "^14.1.0",
    "marked": "^17.0.1",
    "underscore": "^1.13.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@eslint/js": "^9.39.1",
    "@eslint/json": "^0.14.0",
    "@playwright/test": "^1.57.0",
    "babel-loader": "^10.0.0",
    "babel-plugin-transform-import-meta": "^2.3.3",
    "baseline-browser-mapping": "^2.8.32",
    "css-loader": "^7.1.2",
    "diff": "^8.0.2",
    "ejs": "^3.1.10",
    "eslint": "^9.39.1",
    "eslint-plugin-jest": "^29.2.1",
    "extwee": "^2.3.11",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "shelljs": "^0.10.0",
    "style-loader": "^4.0.0",
    "webpack": "^5.103.0",
    "webpack-bundle-analyzer": "^5.0.1",
    "webpack-cli": "^6.0.1"
  },
  "type": "module",
  "sideEffects": [
    "*.css",
    "./lib/index.js"
  ]
}
